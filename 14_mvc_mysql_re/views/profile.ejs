<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
    <h1><%= data.name%> 님 프로필 정보</h1>
    <form name="edit_profile">
        <input type="text" id="userid" value="<%= data.userid%>" readonly>
        <input type="test" id="name" value="<%= data.name%>"> <br>
        <input type="password" id="pw" value="<%= data.pw%>"> <br>
        <input type="text" id="id" value="<%= data.id%>" hidden>
        <button type="button" onclick="edit()">수정</button>
    </form>
    <script>
        function edit() {
            const form = document.forms['edit_profile']
            axios({
                method :'PATCH',
                url :'/profile/edit',
                data : {
                    id : form.id.value,
                    userid : form.id.value,
                    name : form.id.value,
                    pw : form.pw.value
                }
            }).then(res=>{
                if(res.data.result) {
                    document.location.reload();
                }
            })
        }
    </script>
</body>
</html>